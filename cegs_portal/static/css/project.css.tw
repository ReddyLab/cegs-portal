/* These styles are generated from project.scss. */
@tailwind base;
@tailwind components;
@tailwind utilities;

.alert-debug {
  color: black;
  background-color: white;
  border-color: #d6e9c6;
}

.alert-error {
  color: #b94a48;
  background-color: #f2dede;
  border-color: #eed3d7;
}

#filter-bar {
  grid-template-rows: auto 1fr;
}

.bg-dark {
  background-color: rgba(1, 33, 105, 1);
}

#bg {
  background-size: 2000px 1000px;
  background-repeat: no-repeat;
  background-position: center;
  background-attachment: fixed;
}

.title-separator {
  margin-top: 10px;
  border-top: 0.5px solid rgb(133, 139, 146);
  margin-bottom: 15px;
}

.form-group .form-control {
  margin-bottom: 10px;
  border-radius: 5px;
  margin-top: 5px;
}

fieldset legend {
  font-weight: bold;
}

.asteriskField {
    color: red;
}

.indent {
  margin-inline-start: 20px;
}

.inline_url_field div {
  display: inline;
}

#logged-in-only-container {
    contain: paint layout;
}

#logged-in-only-overlay {
    z-index: 1000;
    position: absolute;
    background-color: rgba(255, 255, 255, 0.9);
    width: 100%;
