}

@layer components {
  .bg-color {
    background-color: white;
  }

  .border-color {
    border-color: rgba(1, 33, 105, 1);
  }

  a {
    text-decoration: none;
  }

  a:hover {
    @apply text-blue-800;
  }

  .form-header-text {
    @apply text-xl font-bold leading-tight tracking-tight md:text-2xl;
    color: rgb(16, 13, 121)
  }

  a:visited {
    color: inherit;
    text-decoration: none;
  }

  .th-bg-light-gray {
    background-color: rgb(249, 250, 251);
  }

  .svg-icon {
      fill: currentColor;
      height: 1em;
  }

  .tab-bar {
      background: #ffffff;
      border-radius: 10px;
      padding-left: 10px !important;
      padding-right: 10px;
      box-shadow: 0px 2px 5px 4px rgba(0, 0, 0, 0.1);
  }

  .container {
    background: #ffffff;
    box-shadow: 0px 2px 5px 4px rgba(0, 0, 0, 0.1);
    padding: 20px 30px;
    border-radius: 10px;
    margin-bottom: 20px;
  }

  .content-container {
    background: #ffffff;
    box-shadow: 0px 2px 5px 4px rgba(0, 0, 0, 0.1);
    padding: 10px 10px;
    border-radius: 10px;
    margin-bottom: 20px;
  }

